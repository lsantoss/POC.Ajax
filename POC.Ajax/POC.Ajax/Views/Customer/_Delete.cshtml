@model CustomerViewModel

<h4>Delete customer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="Birth" class="control-label"></label>
                <input asp-for="Birth" class="form-control" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <input asp-for="Gender" class="form-control" readonly/>
            </div>
            <br />
            <div class="form-group">
                <button class="btn btn-danger" onclick="deleteAjax()">Delete</button>
                <button class="btn btn-secondary" onclick="callListViewAjax()">Voltar</button>
            </div>
        </form>
    </div>
</div>

<script src="~/js/Customer/_Delete.js"></script>
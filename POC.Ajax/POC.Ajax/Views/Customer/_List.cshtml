@model IEnumerable<CustomerViewModel>

<p>
    <button type="button" class="btn btn-secondary" onclick="callCreateViewAjax()">Create New</button>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Birth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @if(Model != null && Model.Count() > 0)
        {
            foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @item.Birth.ToString("dd/MM/yyyy HH:mm")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gender)
                    </td>
                    <td>
                        <button class="btn btn-secondary" onclick="callEditViewAjax(@item.Id)">Edit</button> 
                        <button class="btn btn-secondary" onclick="callDetailsViewAjax(@item.Id)">Details</button> 
                        <button class="btn btn-secondary" onclick="callDeleteViewAjax(@item.Id)">Delete</button>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" align="center">No registered customer</td>
            </tr>
        }
    </tbody>
</table>
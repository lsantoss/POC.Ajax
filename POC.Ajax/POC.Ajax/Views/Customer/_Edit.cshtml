@using POC.Ajax.Enums
@model CustomerViewModel

<h4>Edit customer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Birth" class="control-label"></label>
                <input asp-for="Birth" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <select asp-for="Gender" asp-items="@Html.GetEnumSelectList<EGender>()" class="form-control">
                    <option value=""></option>
                </select>
            </div>
            <br />
            <div class="form-group">
                <button class="btn btn-success" onclick="edit()">Edit</button>
                <button class="btn btn-secondary" onclick="callListViewAjax()">Voltar</button>
            </div>
        </form>
    </div>
</div>

<script src="~/js/Customers/_Edit.js"></script>
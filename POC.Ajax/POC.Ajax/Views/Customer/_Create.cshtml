@using POC.Ajax.Enums;
@model CustomerViewModel

<h4>New customer registration</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Birth" class="control-label"></label>
                <input asp-for="Birth" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <select asp-for="Gender" asp-items="@Html.GetEnumSelectList<EGender>()" class="form-control">
                    <option value=""></option>
                </select>
            </div>
            <br />
            <div class="form-group">
                <button type="button" class="btn btn-primary" onclick="addToCreateList()">Add To List</button>
                <button class="btn btn-secondary" onclick="callListViewAjax()">Voltar</button>
            </div>
        </form>
    </div>
    <div class="col-md-8">
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Birth</th>
                    <th>Gender</th>
                </tr>
            </thead>
            <tbody id="tbody-create-list">
                <tr>
                    <td colspan="3" align="center">No customers added to the list</td>
                </tr>
            </tbody>
        </table>
        <button id="btn-create" class="btn btn-success" onclick="createAjax()" disabled>Create</button>
    </div>
</div>

<script src="~/js/Customers/_Create.js"></script>